<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="env" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="ignoreResourceNotFound" value="true" />
		<property name="locations">
			<list>
				<value>file:${ICS_HOME}/etc/*.properties</value>
			</list>
		</property>
	</bean>
	
	<context:component-scan base-package="com.allinfinance.ics"/>
	
	<!-- 针对CPS的短连接服务 -->
	<bean class="com.allinfinance.ics.socket.MessageServer"  destroy-method="shutDown">
		<constructor-arg name="ports">
			<array>
				<value>#{env.serverPort4CPS}</value>
			</array>
		</constructor-arg>
		<constructor-arg name="ioHandler">
			<bean class="com.allinfinance.ics.socket.ShortTermIoHandler">
				<constructor-arg>
					<value>com.allinfinance.ics.online.run.CPSServerReqeustProcessor</value>
				</constructor-arg>
			</bean>
		</constructor-arg>
		<constructor-arg>
			<bean class="com.allinfinance.ics.socket.message.MessageDecoderV020">
				<constructor-arg name="headDecoder">
					<bean class="com.allinfinance.ics.socket.message.request.RequestHeaderV020Decoder"/>
				</constructor-arg>
			</bean>
		</constructor-arg>
		<constructor-arg>
			<bean class="com.allinfinance.ics.socket.message.MessageEncoderV020"/>
		</constructor-arg>
	</bean>
	
	<bean class="com.allinfinance.ics.online.EncryptionClient" destroy-method="dispose">
		<constructor-arg name="host" value="#{env['hsm.hostname']}"/>
		<constructor-arg name="port" value="#{env['hsm.port']}"/>
		<constructor-arg name="backHost" value="#{env['hsm.hostname.back']}"/>
		<constructor-arg name="backPort" value="#{env['hsm.port.back']}"/>
	</bean>
	
	<import resource="spring-mybatis.xml"/>
</beans>
